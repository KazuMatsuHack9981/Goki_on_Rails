$(document).on("turbolinks:load", function() {
	var cells = document.getElementsByClassName("cell");
	var gokis = document.getElementsByClassName("gokis");
	
	
	//idle
	for(var i=0; i<=gokis.length; i++) {
		$("#goki"+i.toString()).click(
			function() {
				anime({
					targets: this,
					rotate: 4,
					direction: "alternate",
					duration: 20
				});
			}
		)
	}


	//hover
	$(".footbutton").hover(
		function(){
			anime({
				targets: this,
				rotate: 3,
				direction: "alternate",
				duration: 20
			});
		}
	)
});
