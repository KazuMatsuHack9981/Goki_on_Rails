window.onload = function() {
	var cells = document.getElementsByClassName("cell");
	var gokis = document.getElementsByClassName("gokis");
	
	
	//idle
	for(var i=0; i<gokis.length; i++) {
		anime({
			targets: gokis[i],
			rotate: 3,
			direction: "alternate",
			loop: true
		});
	}


	//hover
	$(".footbutton").hover(
		function(){
			anime({
				targets: this,
				rotate: 3,
				direction: "alternate",
				duration: 45
			});
		}
	)
}

